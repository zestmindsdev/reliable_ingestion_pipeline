# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=regulatory_records
DB_USER=postgres
DB_PASSWORD=your_password

# Connection Pool Settings (Production Tuning)
DB_POOL_MAX=20                    # Maximum connections in pool
DB_POOL_MIN=2                     # Minimum idle connections
DB_IDLE_TIMEOUT=30000             # Idle client timeout (ms)
DB_CONNECT_TIMEOUT=10000          # Connection timeout (ms)
DB_STATEMENT_TIMEOUT=30000        # Query timeout (ms)

# Server Configuration
PORT=3000
NODE_ENV=development              # development | production

